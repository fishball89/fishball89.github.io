.archive-article
  margin-bottom 30px
  &-header
    h1
      text-transform capitalize
      margin 0 0 5px
      font-size 1.5rem
  &-date
    display block
    color color-grey
    margin-bottom 2px
    font-size 0.8rem
  &-tag
    &-list
      list-style none
      margin 0
      display flex
      padding 0
      &-link
        margin-left 7px
      &-item
        margin-right 10px
        color: color-forest
        &:before
          content '\f02b'
          font-family: font-icon
    